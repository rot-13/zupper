{
  "name": "Zupper",
  "version": "0.0",
  "description": "Removes background images on zuppa.co.il so you can actually read the content.",
  "background": 
  {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action":
  {
    "default_icon": 
    {
      "19": "icon-19.png",
      "38": "icon-38.png"
    },
    "default_title": "Click to read soups!"
  },
  "content_scripts":
  [
    {
      "matches": ["http://*.zuppa.co.il/*"],
      "js": ["zupper.js"]
    }
  ],
  "permissions":
  [
    "declarativeContent"
  ],
  "icons": 
  {
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "manifest_version": 2
}
